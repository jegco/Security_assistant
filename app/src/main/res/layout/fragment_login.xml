<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jorgecaro.info_usuario_jorge_caro.Fragments.LoginFragment"
    android:id="@+id/container">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_report_problem"
        android:layout_marginTop="74dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30dp"
            android:text="@string/welcome_message" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/login" />
    </LinearLayout>
    <com.google.android.gms.common.SignInButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/signin_google"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />
    <com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signin_facebook"
        android:layout_below="@+id/signin_google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
